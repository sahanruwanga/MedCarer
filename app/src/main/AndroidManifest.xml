<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sahanruwanga.medcarer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sahanruwanga.medcarer.gui.StartPage" />
        <activity android:name="com.sahanruwanga.medcarer.gui.EmailRegister" />
        <activity android:name="com.sahanruwanga.medcarer.gui.PhoneRegister" />
        <activity android:name="com.sahanruwanga.medcarer.gui.LoginPage" />
        <activity android:name="com.sahanruwanga.medcarer.gui.WelcomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sahanruwanga.medcarer.gui.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name="com.sahanruwanga.medcarer.gui.MedicationManager" />
    </application>

</manifest>