<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="addRecord"
    tools:context="com.sahanruwanga.medcarer.AddMedicalRecord">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease:"
            android:textSize="18dp"
            android:id="@+id/tv1"
            android:textColor="@color/colorBrown"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:id="@+id/diseaseTxt"
            android:hint="Name of Disease"
            android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine:"
                android:textSize="18dp"
                android:id="@+id/tv2"
                android:layout_below="@+id/diseaseTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBrown"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/medicineTxt"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:hint="Name of Medicine"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergic:"
                android:textSize="18dp"
                android:id="@+id/tv3"
                android:layout_below="@+id/medicineTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBrown"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/allergicTxt"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv3"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:hint="Yes or Not?"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="18dp"
                android:id="@+id/tv4"
                android:layout_below="@+id/allergicTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBrown"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateTxt"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv4"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:hint="Date"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor:"
                android:textSize="18dp"
                android:id="@+id/tv5"
                android:layout_below="@+id/dateTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBrown"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/doctorTxt"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv5"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:hint="Name of Doctor"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact:"
                android:textSize="18dp"
                android:id="@+id/tv6"
                android:layout_below="@+id/doctorTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBrown"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactTxt"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv6"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:hint="Contact of Doctor"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="18dp"
                android:id="@+id/tv7"
                android:layout_below="@+id/contactTxt"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBrown"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionTxt"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv7"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:hint="Description here"
                android:textColor="@color/colorBlack" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/saveBtn"
                android:layout_below="@id/descriptionTxt"
                android:layout_alignRight="@+id/contactTxt"
                android:background="@drawable/rounded_button"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
