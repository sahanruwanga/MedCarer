<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sahanruwanga.medcarer.StartPag">

    <Button
        android:id="@+id/emailBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Sign In using email"
        android:background="@color/colorForButton"
        android:onClick="openEmailLogin"/>

    <Button
        android:id="@+id/phoneBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailBtn"
        android:layout_centerHorizontal="true"
        android:background="@color/colorForButton"
        android:layout_marginTop="15dp"
        android:text="Sign In using phone number"
        android:onClick="openPhoneLogin"/>

</RelativeLayout>
